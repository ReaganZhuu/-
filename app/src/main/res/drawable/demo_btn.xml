<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    按钮默认图片-->
    <item android:state_pressed="false" android:state_focused="false"
        android:drawable="@drawable/video_close"/>
    <!--    按钮按下图片-->
    <item android:state_pressed="true" android:drawable="@drawable/video_open"/>
    <!--    按钮长按图片-->
    <item android:state_focused="true" android:drawable="@drawable/video_open"/>
</selector>